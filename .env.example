# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit your .env file - it contains secrets!

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=
NEXT_PUBLIC_SITE_NAME=Your Site Name

# Supabase Configuration (if using)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Admin Configuration (comma-separated emails)
ADMIN_EMAILS=

# Backblaze B2 Configuration (if using)
B2_KEY_ID=
B2_APP_KEY=
B2_BUCKET=
B2_ENDPOINT=
PUBLIC_B2_BASE_URL=

# Social Wall (if using)
SOCIAL_WALL_EMBED_URL=https://your-social-wall.elf.site

# Worker Configuration
WORKER_BASE_URL=https://your-worker.workers.dev
NEXT_PUBLIC_WORKER_BASE_URL=https://your-worker.workers.dev

# GitHub App OAuth Configuration
# Required for GitHub Apps to appear in OAuth authorization list
# Get these from: https://github.com/settings/apps or your organization's apps
GITHUB_APP_CLIENT_ID=Iv1.your_client_id_here
GITHUB_APP_CLIENT_SECRET=your_client_secret_here
GITHUB_APP_ID=your_app_id_here
GITHUB_APP_INSTALLATION_ID=your_installation_id_here
